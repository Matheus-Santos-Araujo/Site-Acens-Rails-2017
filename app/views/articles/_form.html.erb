<div class="row">
	<%= form_for @article do |f| %>
		<div class="form-group col-sm-11 col-md-12">
			<%= f.label :title %>
			<%= f.text_field :title, class: "form-control" %>
		</div>
		<div class="form-group col-sm-11 col-md-12">
			<%= f.label :body %>
			<%= f.cktext_area :body, class: "form-control" %>
		</div>
		<div class="col-sm-11 col-md-3">
			<%= f.submit "Concluir", :class => "btn btn-primary form-control" %>
		</div>
	<% end %>
</div>
