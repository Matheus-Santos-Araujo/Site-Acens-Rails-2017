<div class="page">
  <div class="more-space-l"></div>
<div class="container">
	<h2>Nova notícia</h2>

  <% @article.errors.full_messages.each do |message| %>
    <div class="alert alert-danger fade in alert-dismissable">
      <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">&times;</a>
      <%=message%>
    </div>
  <% end %>

	<div class="row">
		<%= form_for @article do |f| %>
			<div class="form-group col-sm-11 col-md-12">
				<%= f.label :title %>
				<%= f.text_field :title, class: "form-control", placeholder: "Digite um título" %>
			</div>
			<div class="form-group col-sm-11 col-md-12">
				<%= f.label :subtitle %>
				<%= f.text_field :subtitle, class: "form-control" %>
			</div>
			<div class="form-group col-sm-11 col-md-12">
				<%= f.label :photo %>
				<%= f.file_field :photo, class: "form-control" %>
			</div>
			<div class="form-group col-sm-11 col-md-12">
				<%= f.label :body %>
				<%= f.cktext_area :body, class: "form-control" %>
			</div>
			<div class="col-sm-11 col-md-3">
				<%= f.submit text, :class => "btn btn-primary form-control" %>
			</div>
		<% end %>
	</div>
</div>
</div>
