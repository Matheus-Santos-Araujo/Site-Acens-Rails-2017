<div class="page">
  <div class="more-space-l"></div>
<div class="container">
	<h2>Novo Portfolio</h2>

  <% @portfolio.errors.full_messages.each do |message| %>
    <div class="alert alert-danger fade in alert-dismissable">
      <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">&times;</a>
      <%=message%>
    </div>
  <% end %>

<div class="row">
  <%= form_for @portfolio do |f| %>
    <div class="form-group col-sm-12 col-md-6">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group col-sm-12 col-md-6">
      <%= f.label :client_name %>
      <%= f.text_field :client_name, class: "form-control" %>
    </div>

    <div class="form-group col-sm-12 col-md-6">
      <%= f.label :subtitle %>
      <%= f.text_field :subtitle, class: "form-control" %>
    </div>

    <div class="form-group col-sm-12 col-md-6">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control", rows: 4 %>
    </div>
    <div class="form-group col-sm-12 col-md-6">
      <%= f.label :banner %>
      <%= f.file_field :banner, class: "form-control" %> <br>
      <%= image_tag f.object.banner.url(:thumb), class: "portfolio_preview" %>
    </div>
    <div class="form-group col-sm-12 col-md-6">
        <%= f.submit text, class: "btn btn-primary" %>
    </div>

  <% end %>
</div>
