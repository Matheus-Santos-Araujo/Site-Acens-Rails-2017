  <!-- Begin portfolio -->
  <div class="portfolio">
    <div class="container-fluid">
      <div class="row">
        <% @portfolios.each do |portfolio| %>
          <%= render "layouts/portfolio_item", portfolio: portfolio %>
        <% end %>
        <!-- Portfolio item-1 -->
        <div class="portfolio-item col-sm-6 col-md-6 col-lg-3 wow flipInX" data-wow-delay="0.2s">
          <a href="#" class="thumbnail" data-toggle="modal" data-target="#portfolioModal-1">
            <%= image_tag "/img/portfolio/jao-1.jpg", alt: "JAO" %>
            <div class="cover"></div>
            <div class="caption">
              <div class="caption-content text-center">
                <h2>JAO Unifor</h2>
                <div class="divider divider-sm"></div>
                <p>Jornada Acadêmica de Odontologia da Unifor.</p>
              </div>
            </div>
